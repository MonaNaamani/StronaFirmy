---
import { Image } from 'astro:assets'
import '../styles/global.css'

const { imgSrc, imgAlt, text, href } = Astro.props
---

<li>
  <Image src={imgSrc} width='48' height='48' alt={imgAlt} class='icon' />
  <p class='service-text'>{text}</p>
  {href && <a href={href}>Dowiedz siÄ™ wiecej</a>}
</li>

<style>
  li {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    background-color: var(--whiteBackground);
    width: 250px;
    height: 250px;
    padding: 20px;
    justify-content: flex-start;
    text-align: justify;
    gap: 20px;
    hyphens: auto;
    line-height: 1.5;
    border-radius: 20px;
  }
  a {
    font-weight: 700;
  }
</style>
