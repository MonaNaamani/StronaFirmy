---
import { Image } from 'astro:assets'

const { imgSrc, title, text, href = null } = Astro.props
---

<div>
  {
    href ? (
      <a href={href}>
        <Image src={imgSrc} width='96' height='96' alt='' class='icon' />
        <h3>{title}</h3>
        <p>{text}</p>
        <p class='learn-more'>Dowiedz się więcej</p>
      </a>
    ) : (
      <>
        <Image src={imgSrc} width='96' height='96' alt='' class='icon' />
        <h3>{title}</h3>
        <p>{text}</p>
      </>
    )
  }
</div>

<style>
  div {
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    font-size: 16px;
    padding: 20px;
    max-width: 250px;
    position: relative;
    text-align: center;
    width: 100%;
    border-radius: 5px;
    background-color: #ffffff;
  }

  p {
    text-align: center;
  }

  .icon {
    width: 96px;
    height: 96px;
  }

  a {
    text-decoration: none;
  }

  .learn-more {
    color: var(--accentedColor);
    font-weight: 700;
    text-align: center;
    margin-top: 20px;
    color: var(--accentedText);
  }
</style>
