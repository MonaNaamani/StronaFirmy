---
const { name, quote, company } = Astro.props
---

<figure>
  <figcaption>
    <blockquote>
      <p>
        {quote}
      </p>
    </blockquote>
    <h3>{name}</h3>
    <h4>{company}</h4>
  </figcaption>
</figure>

<style>
  @import url(https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css);
  figure {
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.15);
    color: #9e9e9e;
    display: inline-block;
    font-size: 16px;
    margin: 35px 10px 10px;
    max-width: 310px;
    min-width: 200px;
    position: relative;
    text-align: center;
    width: 100%;
    background-color: #ffffff;
    border-radius: 5px;
    border-top: 5px solid var(--accentedColor);
    display: flex;
    flex-direction: column;
  }

  figure *,
  figure *:before {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-transition: all 0.1s ease-out;
    transition: all 0.1s ease-out;
  }

  figcaption {
    padding: 13% 10% 12%;
  }

  figcaption:before {
    -webkit-transform: translateX(-50%);
    transform: translateX(-50%);
    background-color: #fff;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.25);
    color: var(--accentedColor);
    content: '\f10e';
    font-family: 'FontAwesome';
    font-size: 32px;
    font-style: normal;
    left: 50%;
    line-height: 60px;
    position: absolute;
    top: -30px;
    width: 60px;
  }

  h3 {
    color: #3c3c3c;
    font-size: 20px;
    font-weight: 300;
    line-height: 24px;
    margin: 10px 0 5px;
  }

  h4 {
    font-weight: 400;
    margin: 0;
    opacity: 0.5;
  }

  blockquote {
    font-style: italic;
    font-weight: 300;
    margin: 0 0 20px;
  }
</style>
