---
import BaseLayout from './BaseLayout.astro'
const { frontmatter } = Astro.props
---

<BaseLayout
  title={`${frontmatter.title}`}
  description={frontmatter.description}
>
  <article>
    <slot />
    <div class='flex-container'>
      <a href='/kontakt' class='button'>Napisz do nas</a>
    </div>
  </article>
</BaseLayout>

<style>
  .button {
    margin-top: 50px;
  }
</style>
