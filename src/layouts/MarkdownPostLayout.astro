---
import BaseLayout from './BaseLayout.astro'
import type { ImageMetadata } from 'astro'
import { Image } from 'astro:assets'
import { Icon } from 'astro-icon/components'
import '../styles/blog.css'

const { frontmatter } = Astro.props
const images = import.meta.glob<{ default: ImageMetadata }>(
  '/src/assets/*.{jpeg,jpg,png,gif}'
)
if (!images[frontmatter.image.url])
  throw new Error(
    `"${frontmatter.image.url}" does not exist in glob: "src/assets/*.{jpeg,jpg,png,gif}"`
  )
---

<BaseLayout
  title={`StronaFirmy.pl | ${frontmatter.title}`}
  description={frontmatter.description}
>
  <article>
    <div class='date'>
      <Icon name='calendar' size={24} />
      <p>
        {frontmatter.pubDate.toString().slice(0, 10)}
      </p>
    </div>
    <h1>{frontmatter.title}</h1>
    <p><em>{frontmatter.description}</em></p>

    <Image
      class='img'
      src={images[frontmatter.image.url]()}
      alt={frontmatter.image.alt}
      widths={[240, 540, 720]}
      sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px`}
    />
    <p class='blog-img-credit'>{frontmatter.image.credit}</p>

    <div class='tags'>
      {
        frontmatter.tags.map((tag) => (
          <a href={`/tags/${tag}`} class='tag-button'>
            {tag}
          </a>
        ))
      }
    </div>
    <slot />
  </article>
</BaseLayout>

<style>
  .date {
    display: flex;
    gap: 5px;
    justify-content: right;
  }
  .tags {
    margin: 20px 0;
  }

  .img {
    width: 100%;
    height: auto;
    border-radius: 10px;
  }
</style>
